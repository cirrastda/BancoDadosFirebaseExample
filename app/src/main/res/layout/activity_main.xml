<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_site"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="E-Mail"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_blog"
        app:layout_constraintTop_toBottomOf="@+id/main_site"
        app:layout_constraintLeft_toLeftOf="@id/main_site"
        app:layout_constraintRight_toRightOf="@id/main_site"
        android:layout_marginTop="8dp"
        android:hint="Blog"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_enviar"
        app:layout_constraintTop_toBottomOf="@+id/main_blog"
        app:layout_constraintLeft_toLeftOf="@id/main_blog"
        app:layout_constraintRight_toRightOf="@id/main_blog"
        android:layout_marginTop="8dp"
        android:text="Enviar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>